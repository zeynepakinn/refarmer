extends includes/layout
include includes/mixin
block content
  article.entry
    .entry-content
      // contact form
      .small-bg-contact-us
        .container
          +hero-bg(
            'card-post-style',
            'col-lg-12',
            false,
            {
              tag:"About us",
              title:"Contact us",
              content:"Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas vestibulum urna augue. Duis sit maximus commodo hendrerit lorem maximus mi.",
              image:"assets/images/contact-us/c6.jpg",
              alt:"contact-us-hero-image"
            })

      
      .overflow-hidden
        .container.mt-lg-8.mt-md-7.mt-4  
          .row.gx-lg-5
            .col-lg-4.mb-0
              img(src="assets/images/contact-us/c2.jpg", alt="contact-us-1").height-px-408.w-100.object-fit-cover
              .bg-texture-image.py-4.px-4
                .py-3.px-3
                  h4.mb-4 Our London Shop
                  p.mb-1 9235 Bayberry Drive
                  | Hendersonville, NC 28792
                  p.mb-1.mt-4 london@email.com​
                  | +51853 458 243

            .col-lg-4
              img(src="assets/images/contact-us/c3.jpg", alt="contact-us-2").height-px-408.w-100.object-fit-cover
              .bg-texture-image.py-4.px-4
                .py-3.px-3
                  h4.mb-4 Our Amsterdam Shop
                  p.mb-1 9235 Bayberry Drive
                  | Hendersonville, NC 28792
                  p.mb-1.mt-4 amsterdam@email.com​
                  | +51853 458 243


            .col-lg-4
              .position-relative
                img(src="assets/images/contact-us/c4.jpg", alt="contact-us-3").height-px-408.w-100.object-fit-cover
                img.z-index-flower.d-lg-block.d-none(src="assets/images/flowers/f5.png", alt="f5 flower image").position-absolute.top-px-lg-12.end-px-n-lg-130

              .bg-texture-image.py-4.px-4
                .py-3.px-3
                  h4.mb-4 Our Singapore Shop
                  p.mb-1 9235 Bayberry Drive
                  | Hendersonville, NC 28792
                  p.mb-1.mt-4 singapore@email.com​
                  | +51853 458 243

      // form and map
      .container.my-lg-8.my-md-7.my-5
        .container
          .row.gx-lg-5
            .col-lg-5
              .position-relative
                img.mb-lg-0.mb-5(src="assets/images/contact-us/c5.jpg", alt="contact-us-5").height-px-383.w-100.object-fit-cover
                img.z-index-flower.d-lg-block.d-none(src="assets/images/flowers/1.png", alt="1 flower image").position-absolute.top-px-lg-10.start-px-n-lg-36

              .bg-texture-image.py-4.px-4
                .py-3.px-3
                  h4.mb-4 We're here to help
                  p.mb-0 If you have any questions about our website 
                  | please email web@email.com, fill out the form 
                  | or call +44 650.800.3124.
                  p.mt-4 Monday to Friday, 10am-5pm

            .col-lg-7.my-auto
              .ms-px-lg-32.me-px-lg-40
                // form
                .pr-lg-5.pb-md-0
                  form#contact-form(method='post' action='assets/php/contact.php')
                    .mb-4.pb-2
                      input#form_name.form-control(type='text', name='fname', placeholder='Name', required)
                    .mb-4.pb-2
                      input#form_email.form-control(type='text', name='lname', placeholder='Email', required)
                    .mb-4.pb-2
                      input#subject.form-control(type='text', name='subject', placeholder='Subject')
                    .mb-4.pb-2
                      textarea#form_message.form-control( name='message', placeholder='Message', rows='6', required)
                    .mb-4 
                      a.btn-link.pb-2.btn-contact-link(href='#') Send message 

      include includes/icons-nevigation
