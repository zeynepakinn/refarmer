extends includes/layout
include includes/mixin

block content
  article.entry
    .entry-content
      //- Page title
      .small-bg-faq.mb-px-lg-100.mb-px-md-80.mb-px-60
        .container
          +hero-bg(
            'card-post-style',
            'col-lg-12',
            false,
            {
              tag:"Ask us",
              title:"Slider",
              content:"Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas vestibulum urna augue. Duis sit maximus commodo hendrerit lorem maximus mi.",
              image:"assets/images/faq/fa1.jpg",
              alt:"faq hero image"
            })

      // Slider
      .container
        .row.large-gutters
          .col-lg-3.mb-7
            //- Elements nav
            include includes/elements-nav
          .col-lg-9.mb-10.mt-5
            h5.mb-4 Arrows
            .slider-call.popup-gallery.mb-5(data-flickity='{ "contain": true, "prevNextButtons": true, "pageDots": false }')
                img(src='assets/images/blog/b4.jpg', alt='blog')
                img(src='assets/images/blog/b1.jpg', alt='blog')
                img(src='assets/images/blog/b4.jpg', alt='blog')

            h5.mb-4 Pagination
            .slider-call.popup-gallery(data-flickity='{ "contain": true, "prevNextButtons": false }')
                img(src='assets/images/blog/b2.jpg', alt='Blog')
                img(src='assets/images/blog/b7.jpg', alt='Blog')
                img(src='assets/images/blog/b8.jpg', alt='Blog')

      include includes/icons-nevigation
