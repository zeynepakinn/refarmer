//- page title
mixin pagetitle(data)
  // Page Title
  .page-main-title
    .container
      .row.align-items-center
        .col-lg-6
          if data.title
            h2.mb-4.entry-title= data.title
          else
            h2.entry-title Page Title
          if data.description
            p= data.description
          else
            p Consetetur lorem ipsum dolor sit amet, sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat,

  // End Page Title

mixin entryMetaTop(author, categories, date, commentCount, isEdit=false )
  .entry-meta-top
    if author
      span.entry-author
        = author
    if categoty
      span.entry-meta-categoty
        = categoty
    if date
      span.entry-meta-date 
        = date
    if commentCount
      span.entry-comment-count
        a(href="/blog-single-post.html#comments")
          i.far.fa-comment-alt
          = commentCount
    if isEdit
      span.entry-comment-count
        a(href="/blog-single-post.html#comments")
          i.far.fa-edit
          | Edit
//- Blog
mixin blog(style, column, isReadMore=false, ...items)
  // Blog
  div.row.gx-lg-5.gy-lg-5.gy-3.gx-3.blog-post(class=style)
    each item in items
      div(class=column)
        article
          figure.entry-media
            if item.image
              a(href="blog-single-post.html")
                img.lozad(src=item.image.replace(".jpg", "-lqip.jpg"), data-src=item.image, alt=item.alt).height-px-320.object-fit-cover.w-100
            if item.category
              span.entry-meta-category
                a(href='blog-three-col.html')= item.category
          .entry-content-wrapper.bg-texture-image
            header.entry-header
              a(href='blog-single-post.html')
                h5.mb-px-17.hover-color= item.title
              +entryMetaTop(item.author, item.category, item.date, item.commentCount, item.isEdit)
            if item.content
              .entry-content
                p= item.content
              //- if isReadMore
              //-   footer.entry-footer
              //-     a.entry-read-more(href='blog-single-post.html') Read More
              //-       i.fas.fa-long-arrow-alt-right.ml-1
  // End Blog

