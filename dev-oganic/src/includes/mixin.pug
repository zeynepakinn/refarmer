//- Shop - Products
mixin shop( style, column, isProductsFilter=false, ...items)
  div.row.gx-lg-5.gy-lg-6(class=style)
    each item in items
      div(class=column)
        article.mb-lg-0.mb-px-md-40.mb-px-20
          if item.image
            a(href='single-product.html')
              img.mb-px-18(src=item.image, alt=item.alt).height-px-456.w-100.object-fit-cover
          if item.title
            h5.product-title
              a(href='single-product.html')= item.title
          if item.price
            span.price
              span.amount
                span.currencySymbol $
                  = item.price
          div.mt-px-14
            a.h6.btn-link.border-2.border-bottom.shop-button-style(href='single-product.html') Add to cart
  // End Products

//- pagination
mixin pagination
  // Pagination
  nav.pagination-holder
    ul.pagination
      li.page-item.active
        a.page-link(href='#') 1
      li.page-item
        a.page-link(href='#') 2
      li.page-item
        a.page-link(href='#') 3
      li.page-item
        a.page-link(href='#') 4
      li.page-item
        a.page-link(href='#' aria-label='Next')
          span >
          span.visually-hidden Next
  // End Pagination


